<configuration>

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{HH:mm:ss.SSS} %-5level %class{50}.%M:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="colored_console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%red(%d{HH:mm:ss.SSS}) %highlight(%-5level) %cyan(%class{50}.%M:%L) - %blue(%msg%n)</pattern>
        </encoder>
    </appender>
    <logger name="colored_logger" level="INFO" additivity="false">
        <appender-ref ref="colored_console" />
    </logger>

    <logger name="org.postgresql" level="debug"/>
    <logger name="org.springframework.jdbc" level="debug"/>
    <logger name="ru.javawebinar.topjava" level="debug"/>

    <root level="WARN">
        <appender-ref ref="console"/>
    </root>

</configuration>